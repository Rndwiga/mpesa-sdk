{
    "name": "rndwiga/mpesa",
    "type": "package",
    "description": "An opinionated approach to Mpesa API implementation",
    "keywords": ["ui", "rndwiga",  "mpesa", "laravel","safaricom","B2C", "C2B","B2B","EXPRESS"],
    "homepage": "https://github.com/Rndwiga/",
    "authors": [
        {
            "name": "Raphael Ndwiga",
            "email": "raphael@raphaelndwiga.africa"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpseclib/phpseclib": "^2.0",
      "ext-openssl": "*",
      "ext-json": "*"
    },
    "require-dev": {
        "pestphp/pest": "3.x-dev",
        "mockery/mockery": "2.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Rndwiga\\Mpesa\\": "src/"
        }
    },
    "license": "MIT",
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
