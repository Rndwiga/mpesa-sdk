{
    "name": "rndwiga/toolbox",
    "type": "package",
    "description": "A package containing helper methods and classes that can be used in any project",
    "keywords": ["toolbox", "rndwiga", "helpers", "utilities"],
    "authors": [
        {
            "name": "Raphael Ndwiga",
            "email": "raphael@raphaelndwiga.africa"
        }
    ],
    "require": {
        "php": "^8.1",
        "monolog/monolog": "^2.0",
        "vlucas/phpdotenv": "^5.0",
        "ext-zlib": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "suggest": {
        "illuminate/support": "Required for Laravel integration"
    },
    "autoload": {
        "psr-4": {
            "Rndwiga\\Toolbox\\": "src/"
        },
        "files": [
            "src/Helpers/toolbox.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rndwiga\\Toolbox\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "license": "MIT",
    "minimum-stability": "stable"
}
